<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ingresar">

    <EditText
        android:id="@+id/lblNombre"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/lblApellido"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lblApellido"
        android:layout_marginTop="42dp"
        android:text="Ingrese nombre"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/lblApellido"
        android:layout_width="257dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lblDireccion"
        android:layout_marginTop="96dp"
        android:text="Ingrese Apellido"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="116dp"
        android:layout_alignLeft="@+id/lblDireccion" />

    <EditText
        android:id="@+id/lblDireccion"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtMonto"
        android:layout_marginTop="170dp"
        android:text="Ingrese Direccion"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="188dp"
        android:layout_alignLeft="@+id/txtMonto" />

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="207dp"
        android:layout_height="77dp"
        android:layout_alignEnd="@+id/lblNombre"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:text="INSERTAR"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="348dp"
        android:layout_alignRight="@+id/lblNombre" />

    <EditText
        android:id="@+id/txtMonto"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Monto"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="257dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp" />

</RelativeLayout>